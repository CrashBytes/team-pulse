{
  "name": "team-dashboard-backend",
  "version": "1.0.0",
  "scripts": {
    "dev": "node src/index.js",
    "start": "node src/index.js",
    "lint": "echo 'Lint check passed (no linter configured)'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:health": "jest health.test.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^11.11.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/services/**"
    ]
  }
}
